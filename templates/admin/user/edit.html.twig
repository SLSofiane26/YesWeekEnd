{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'utilisateur {{user.LastName}}{% endblock %}

{% block body %}

<div class="container">
<h1 class="my-5">Modification de l'utilisateur {{user.LastName}}</h1>

<div class="alert alert-info">
<strong>FirstName: {{ user.FirstName }}</br></strong>
<strong>LastName : {{ user.LastName }}</br></strong>
</div>

{{ form_start(form) }}
{{ form_widget(form) }}

<button type="submit" class="btn btn-primary">
<i class="fas fa-check"></i>
Enregistrer les modifications
</button>
{{ form_end(form) }}
</div>
{% endblock %}